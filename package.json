{
  "name": "jsonlint-cli",
  "version": "0.2.3",
  "description": "cli wrapper for jsonlint",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "changelog": "conventional-changelog --preset angular --infile changelog.md --same-file --output-unreleased",
    "push": "git push && git push --tags",
    "release": "npm version $(conventional-recommended-bump -p angular)",
    "test": "parallelshell \"eslint index.js\" \"node index.js package.json\" ",
    "preversion": "npm test",
    "version": "npm run changelog && git add . && echo \"$(conventional-changelog -p angular)\" > .git/COMMITMSG.tmp",
    "postversion": "export RELEASE_VERSION=$(git log -1 --pretty=%B HEAD^..HEAD) && git tag -d v${RELEASE_VERSION} && git commit --amend -m \"chore(release): ${RELEASE_VERSION}\n$(cat .git/COMMITMSG.tmp)\" && git tag -a v${RELEASE_VERSION} -m \"$(cat .git/COMMITMSG.tmp)\" && rm .git/COMMITMSG.tmp"
  },
  "binary": {
    "jsonlint-cli": "./index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marionebl/jsonlint-cli.git"
  },
  "keywords": [
    "jsonlint",
    "cli",
    "jsonschema"
  ],
  "author": {
    "name": "Mario Nebl",
    "email": "hello@herebecode.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marionebl/jsonlint-cli/issues"
  },
  "homepage": "https://github.com/marionebl/jsonlint-cli#readme",
  "devDependencies": {
    "conventional-changelog-cli": "1.0.0",
    "eslint": "1.10.3",
    "eslint-config-xo": "0.9.2",
    "parallelshell": "2.0.0"
  },
  "dependencies": {
    "cli-rc": "1.0.12",
    "denodeify": "1.2.1",
    "globby": "4.0.0",
    "jjv": "1.0.2",
    "jsonlint": "1.6.2",
    "lodash.memoize": "4.0.1",
    "minimist": "1.2.0",
    "mkdirp": "0.5.1"
  }
}
